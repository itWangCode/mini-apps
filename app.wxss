.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

page {
  width: 100%;
  background-color: #f1f2f6;
  letter-spacing: 0.58rpx;
}

input, text, page, button {
  font-family: MicroSoft YaHei;
}

.clo-60 {
  color: #606060;
}

.clo-c41 {
  color: #414141;
}

.clo-bf {
  color: #66b1ff;
}
.clo-a {
