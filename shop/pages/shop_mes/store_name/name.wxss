/* pages/shop_mes/store_name/name.wxss */

.sing-wrap {
  box-sizing: border-box;
  padding: 0 32rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 108rpx;
}

.store-name {
  font-size: 32rpx;
  width: 600rpx;
  height: 120rpx;
  line-height: 120rpx;
}

/** 时间插件 */

.time-wrap {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 515rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.chanbtn {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: #7188ff;
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
  box-sizing: border-box;
}
