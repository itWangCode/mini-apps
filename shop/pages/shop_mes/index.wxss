/* pages/shop_mes/index.wxss */

.container {
  background-color: #fff;
  width: 100%;
  margin-bottom: 40rpx;
}

.shop-top {
  width: 715rpx;
  margin-left: 32rpx;
  overflow: hidden;
}

.shop-mes {
  margin-top: 34rpx;
  color: #414141;
  font-size: 32rpx;
  line-height: 38rpx;
}

/*照片部分*/

.mes-sup {
  margin-top: 25rpx;
  padding-bottom: 13rpx;
  height: 156rpx;
  border-bottom: 2rpx solid #f1f2f6;
}

.add-mes {
  width: 214rpx;
  height: 122rpx;
  float: left;
  margin-right: 18rpx;
}

.add-mes .add-on {
  margin-top: 19rpx;
  width: 100%;
  height: 100%;
}

.scroll-image {
  height: 156rpx;
  float: left;
  width: 482rpx;
  overflow: hidden;
}

.shop-images {
  position: relative;
  z-index: 1;
  width: 230rpx;
  height: 118rpx;
  margin-top: 30rpx;
}

.img {
  width: 210rpx;
  height: 118rpx;
  border-radius: 4rpx;
}

.det-wrap {
  position: absolute;
  right: 9rpx;
  top: -19rpx;
  width: 38rpx;
  height: 38rpx;
  z-index: 2;
}

.det {
  width: 100%;
  height: 100%;
}

.shop-detail {
  height: 118rpx;
  box-sizing: border-box;
  padding-right: 32rpx;
  margin-left: 32rpx;
  justify-content: space-between;
  font-size: 32rpx;
  color: #414141;
  border-bottom: 2rpx solid #f1f2f6;
}

.shop-detail:last-child {
  border-bottom: none;
}

.shop-detail, .de-rights, .de-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.de-center {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
}

.mr {
  margin-right: 21.8rpx;
}

.de-center>image {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
}

.center-font1 {
  text-align: right;
  width: 486rpx;
  color: #606060;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.de-right {
  width: 18rpx;
  height: 24.6rpx;
}

.de-right>image {
  width: 100%;
  height: 100%;
}
.tui{
  margin-bottom: 20rpx;
}
