/* tixian.wxss */

.cash {
  width: 686rpx;
  height: 508rpx;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin: 32rpx auto;
  border-radius: 4rpx;
}

.cash-wrap {
  display: flex;
  flex-direction: row;
  align-items: unset;
  justify-content: space-between;
  font-size: 32rpx;
  color: #606060;
  margin-bottom: 50rpx;
}

.cash .tip {
  font-size: 32rpx;
}

.cash-left {
  margin-right: 30rpx;
}

.cash-right {
  font-size: 32rpx;
}

.cash-right .wei {
  font-size: 28rpx;
  color: #aaa;
}

.input-cash, .cash-tip {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.input-cash {
  margin-top: 64rpx;
  margin-bottom: 48rpx;
  font-size: 72rpx;
  color: #606060;
  border-bottom: 1px solid #f1f2f6;
  height: 100rpx;
}

.input {
  margin-left: 10rpx;
  width: 80%;
  height: 90rpx;
  font-size: 72rpx;
}

.cash-tip {
  font-size: 28rpx;
}

.all-cash {
  color: #66b1ff;
}

.time {
  width:100%;
  margin-top: 20rpx;
  text-align: center;
  color: #aaa;
  font-size: 28rpx;
}
