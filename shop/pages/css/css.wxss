/* 选择器样式 */

.bg-w {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 282px;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.time-wrap {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 12;
  width: 100%;
  height:  282px;
  font-size: 36rpx;
  background-color: #fff;
}

.chanbtn {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: #7188ff;
  border-bottom: 1px solid #ccc;
  padding: 10px;
  height: 41px;
  box-sizing: border-box;
}
