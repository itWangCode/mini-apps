/* pages/check/index.wxss */

.container {
  position: relative;
  height: 500rpx;
  z-index: 0;
}

page {
  background-color: #f1f2f6;
}

.bg {
  background-color: #f1f2f6;
  position: fixed;
  left: 0;
  height: 100%;
  width: 100%;
}

.check-wrap {
  display: flex;
  flex-direction: column;
  align-content: center;
  margin-top: 80rpx;
}

.che-tip {
  width: 100%;
  font-size: 36rpx;
  color: #414141;
  text-align: center;
  position: absolute;
  top: 80rpx;
  z-index: 2;
}

.for-wrap {
  display: flex;
  flex-direction: row;
  width: 638rpx;
  margin-left: 56rpx;
  position: absolute;
  top: 160rpx;
}

.for-wrap .name {
  width: 100rpx;
  height: 96rpx;
  line-height: 96rpx;
  background: #fff;
  border: 1px solid #66b1ff;
  border-radius: 4px;
  margin-right: 8rpx;
  text-align: center;
  font-size: 64rpx;
  color: #414141;
}

.for-wrap>input:last-child {
  margin-right: 0rpx;
}

.input {
  position: absolute;
  left: -100%;
  width: 1550rpx;
  top: 0rpx;
  z-index: 10;
  font-size: 64rpx;
  padding-left: 50rpx;
  box-sizing: border-box; 
}
